extends layout
block head
  link(rel='stylesheet', href='/stylesheets/login-and-signup.css')

block content
  div.stars
  form.signup-form(name="signup" method="post")
    span.signup-form-contents
      div.login-form-title(style='white-space:pre;')
          |Sign Up
      if errors
        div.errors
          each error in errors
            span.error=error
      div.input
        div.label Email
        input.textbox(type="email", name="email", required)
        div.label Password
        input.textbox(type="password", name="password", id="password", required)
        div.label Confirm Password
        input.textbox(type="password", name="confirm_password", id="confirm_password", required)
        div.label First Name
        input.textbox(type="text", name="firstName", required)
        div.label Last Name
        input.textbox(type="text", name="lastName", required)
        div.label Phone Number
        input.textbox(type="tel", name="phoneNumber", required)
      div.actions
        input.submit(type="submit", value="SIGN UP")
      div
         a(href="/auth/login") Already have an account? Login

    script.
      var password = document.getElementById("password")
      , confirm_password = document.getElementById("confirm_password");

      function validatePassword(){
        if(password.value != confirm_password.value) {
          confirm_password.setCustomValidity("Passwords Don't Match");
        } else {
          confirm_password.setCustomValidity('');
        }
      }

      password.onchange = validatePassword;
      confirm_password.onkeyup = validatePassword;

