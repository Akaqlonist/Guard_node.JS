{
  "name": "VetGuard-Web",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./build/ && mkdir ./build && mkdir ./build/views",
    "start": "nodemon ./src/bin/run.js --exec babel-node --presets node6 --ext js,jade,html",
    "build": "npm run build-views && npm run build-css && npm run build-public && npm run babel && npm run cp-build && cd ./build && npm install --production",
    "build-views": "cp -r ./src/views/. ./build/views",
    "build-css": "node-sass -r ./src/scss/. -o ./src/public/stylesheets",
    "build-public": "cp -r ./src/public/. ./build/public",
    "cp-build": "cp package.json.build ./build/package.json && cp Procfile.build ./build/Procfile && cp .gitignore.build ./build/.gitignore",
    "babel": "babel ./src -d ./build/ --ignore ./node_modules/, ./build/ --presets node6",
    "serve": "node ./build/bin/run.js",
    "publish": "git push heroku master && heroku run npm run build && heroku restart"
  },
  "dependencies": {
    "6": "0.0.1",
    "async": "^2.1.1",
    "basic-auth": "^1.1.0",
    "bcrypt": "0.8.7",
    "body-parser": "~1.13.2",
    "client-sessions": "0.7.0",
    "cookie-parser": "~1.3.5",
    "cors": "^2.8.1",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "express-flash": "0.0.2",
    "immutable": "^3.8.1",
    "jade": "~1.11.0",
    "jsonwebtoken": "^7.2.1",
    "mailgun-js": "0.7.12",
    "moment": "^2.17.0",
    "morgan": "~1.6.1",
    "node": "0.0.0",
    "node-sass": "^4.3.0",
    "pg": "6.1.0",
    "pg-query": "0.11.0",
    "serve-favicon": "~2.3.0",
    "stripe": "^4.15.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.22.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-node6": "^11.0.0",
    "node-sass": "^4.3.0",
    "nodemon": "^1.11.0"
  }
}
